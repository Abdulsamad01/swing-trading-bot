# ============================================================
# Swing Bot Configuration
# Copy this file to .env and fill in your values.
# NEVER commit your .env file to version control.
# ============================================================

# --- Core ---
ENVIRONMENT=demo                        # demo | live
EXCHANGE=delta_demo                     # delta_demo | coinswitch_live
MARKET_TYPE=futures                     # must be futures
SYMBOL=ADAUSDT                          # locked in v1
PROFILE=ltf_15m                         # ltf_5m | ltf_15m
LEVERAGE=3                              # fixed in v1
USE_FIXED_CAPITAL=true                  # fixed in v1
FIXED_CAPITAL_INR=1000                  # fixed in v1
RISK_PER_TRADE_PERCENT=2.0             # % of effective capital at risk per trade

# --- Session Windows (UTC) ---
LONDON_PEAK_START_UTC=07:00
LONDON_PEAK_END_UTC=10:00
OVERLAP_START_UTC=13:00
OVERLAP_END_UTC=16:00
NY_PEAK_START_UTC=17:00
NY_PEAK_END_UTC=20:00
RR_LONDON=2.0
RR_OVERLAP=4.0
RR_NY=3.0
SESSION_ONLY_TRADING=true

# --- Strategy Parameters ---
ENTRY_PERCENT=50
PIVOT_LEFT_BARS=5
PIVOT_RIGHT_BARS=5
ATR_PERIOD=14
DISPLACEMENT_MULT_5M=1.8
DISPLACEMENT_MULT_15M=1.5
MAX_FVG_AGE_5M=24
MAX_FVG_AGE_15M=20

# --- Fee Model ---
DELTA_MAKER_FEE_PERCENT=0.05
DELTA_TAKER_FEE_PERCENT=0.02
COINSWITCH_TRADING_FEE_PERCENT=0.20
COINSWITCH_TDS_PERCENT=1.00
COINSWITCH_TOTAL_COST_PERCENT=1.20     # use 1.50 for stress test mode

# --- Data & Runtime ---
DATA_SOURCE_PRIMARY=exchange_futures
DATA_SOURCE_FALLBACK=binance_usdm_futures
CANDLE_LIMIT=300
CANDLE_CLOSE_BUFFER_SECONDS=5
MAX_RETRIES=3
RETRY_BASE_DELAY_SECONDS=1.0
RETRY_JITTER_PERCENT=20

# --- Telegram ---
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# --- Delta Exchange India (required when EXCHANGE=delta_demo) ---
DELTA_DEMO_API_KEY=your_delta_demo_api_key
DELTA_DEMO_API_SECRET=your_delta_demo_api_secret

# --- CoinSwitch Pro (required when EXCHANGE=coinswitch_live) ---
COINSWITCH_API_KEY=your_coinswitch_api_key
COINSWITCH_API_SECRET=your_coinswitch_api_secret

# --- Storage ---
SQLITE_PATH=swing_bot.db
LOG_LEVEL=INFO
