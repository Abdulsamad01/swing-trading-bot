# =========================
# Trading Bot .env Example
# =========================

# ---- Runtime ----
ENVIRONMENT=demo
EXCHANGE=delta_demo
MARKET_TYPE=futures
SYMBOL=ADAUSDT
PROFILE=ltf_5m
LEVERAGE=3

# ---- Capital & Risk (v1 fixed) ----
USE_FIXED_CAPITAL=true
FIXED_CAPITAL_INR=1000
RISK_PER_TRADE_PERCENT=2.0

# ---- Session RR Policy (UTC) ----
# London peak: 07:00-10:00 => RR 1:2
LONDON_PEAK_START_UTC=07:00
LONDON_PEAK_END_UTC=10:00
RR_LONDON=2

# London-NY overlap: 13:00-16:00 => RR 1:4
OVERLAP_START_UTC=13:00
OVERLAP_END_UTC=16:00
RR_OVERLAP=4

# NY peak: 17:00-20:00 => RR 1:3
NY_PEAK_START_UTC=17:00
NY_PEAK_END_UTC=20:00
RR_NY=3

# If true, bot skips entries outside configured session windows
SESSION_ONLY_TRADING=true

# ---- Strategy ----
ENTRY_PERCENT=50
PIVOT_LEFT_BARS=5
PIVOT_RIGHT_BARS=5
ATR_PERIOD=14
DISPLACEMENT_MULT_5M=1.8
DISPLACEMENT_MULT_15M=1.5
MAX_FVG_AGE_5M=24
MAX_FVG_AGE_15M=20

# ---- Fees & Tax ----
# Delta demo (paper analytics only)
DELTA_MAKER_FEE_PERCENT=0.05
DELTA_TAKER_FEE_PERCENT=0.02

# CoinSwitch live practical defaults
COINSWITCH_TRADING_FEE_PERCENT=0.20
COINSWITCH_TDS_PERCENT=1.00
COINSWITCH_TOTAL_COST_PERCENT=1.20
# Optional stress mode: 1.50
# COINSWITCH_TOTAL_COST_PERCENT=1.50

# ---- Data Feed ----
# Must remain futures-only in v1
DATA_SOURCE_PRIMARY=exchange_futures
DATA_SOURCE_FALLBACK=binance_usdm_futures
CANDLE_LIMIT=300

# ---- Scheduler ----
CANDLE_CLOSE_BUFFER_SECONDS=5
MAX_RETRIES=3
RETRY_BASE_DELAY_SECONDS=1.0
RETRY_JITTER_PERCENT=20

# ---- Telegram ----
TELEGRAM_BOT_TOKEN=replace_me
TELEGRAM_CHAT_ID=replace_me

# ---- Delta Exchange India (Demo) ----
DELTA_DEMO_API_KEY=replace_me
DELTA_DEMO_API_SECRET=replace_me

# ---- CoinSwitch (Live) ----
COINSWITCH_API_KEY=replace_me
COINSWITCH_API_SECRET=replace_me

# ---- Storage ----
SQLITE_PATH=./data/trading_bot.db
LOG_LEVEL=INFO
